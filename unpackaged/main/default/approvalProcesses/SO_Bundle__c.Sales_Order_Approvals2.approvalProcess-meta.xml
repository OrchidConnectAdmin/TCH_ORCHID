<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Date__c</field>
        <field>Status__c</field>
    </approvalPageFields>
    
    
    <emailTemplate>Worflow_Emails/SO_Review_Needed</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SO_Bundle__c.Status__c</field>
            <operation>equals</operation>
            <value>Created</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Return_to_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Sales_Orders_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Sales_Orders_have_been_approved</name>
            <type>Task</type>
        </action>
        <action>
            <name>Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Return_to_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Sales_Orders_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Returned</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Review_Submitted_Sales_Orders</name>
            <type>Task</type>
        </action>
        <action>
            <name>Sales_Order_Submitted_for_Review</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Sales Order Approvals2</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
