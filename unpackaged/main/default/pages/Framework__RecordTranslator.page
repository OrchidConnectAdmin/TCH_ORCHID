<apex:page id="RecordTranslator"
    controller="Framework.TranslationController"
    sideBar="false"
    showHeader="false"
    standardStylesheets="false"
>
    <apex:includeLightning />

    <style>
        body {
            margin: 0;
            background-image: linear-gradient(#2a426c, #ffffff 200%);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            min-height: 100vh;
        }
        .slds-dueling-list__column.slds-dueling-list__column_responsive {
            flex: 1;
        }
        [data-name='contentFrame'] > c-pfm-tile > div.pfm-tile {
            height: calc(100vh - 82px - 3rem);
            overflow-y: auto;
        }
        [data-name='contentFrame'] > c-pfm-tile > div.pfm-tile > div.pfm-tile__body {
            min-height: 100%;
            max-height: 100%;
        }
        [data-name='headerFrame'] > c-pfm-tile > div.pfm-tile {
            padding-top: 1rem !important;
            padding-bottom: 1rem !important;
        }
        [lightning-duallistbox_duallistbox].slds-required {
            display: none;
        }
        c-record-translator > div.pfm-height-full div.pfm-column {
            height: 100%;
        }
    </style>

    <div id="vfMainBody" />

    <script>
        $Lightning.use('{!Namespace}:RecordTranslatorApp', function () {
            $Lightning.createComponent(
                '{!Namespace}:recordTranslatorPage',
                {
                    recordId: '{!$CurrentPage.parameters.id}'
                },
                'vfMainBody',
                function (cmp) {}
            );
        });
    </script>
</apex:page>