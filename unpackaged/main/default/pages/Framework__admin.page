<apex:page standardStylesheets="false"
    showHeader="true"
    sidebar="false"
    cache="false"
    controller="Framework.AdminController"
    tabStyle="Framework__tab"
>
    <apex:includeLightning />
    <link rel="stylesheet" media="screen" href="{!URLFOR($Resource.SLDS_BaseV2,'css/styles.css')}" />
    <style>
        .slds-form-element__label {
            margin-right: 0px !important;
        }
        .slds .slds-text-align--center {
            text-align: center;
        }
        .slds .slds-align-middle {
            vertical-align: middle;
            align-self: center;
        }
        .slds .slds-col {
            flex: 1 1 auto;
        }
        .slds .slds-grid {
            display: flex;
        }
        .slds .slds-text-heading--medium {
            font-weight: 300;
            font-size: 1.5rem;
            line-height: 1.25;
        }
    </style>
    <div class="slds slds-loading-layout" id="mainWrapper">
        <div class="slds-grid slds-loading-layout slds-theme--shade">
            <div class="slds-col slds-text-align--center slds-align-middle">
                <img
                    src="{!URLFOR($Resource.SLDS_BaseV2,'/img/spinners/slds_spinner_brand.gif')}"
                    alt="saving"
                    width="50"
                    height="50"
                />&nbsp;
                <span class="slds-text-heading--medium">Loading...</span>
            </div>
        </div>
    </div>
    <script>
        function componentLoaded() {
            document.getElementById('mainWrapper').classList.add('hidden');
        }
        $Lightning.use('{!Namespace}:Spark', function () {
            $Lightning.createComponent('{!Namespace}:SparkAdminTemplate', {}, 'lightning', function (cmp) {
                $A.eventService.addHandler({ event: '{!Namespace}:ComponentLoadedEvent', handler: componentLoaded });
            });
        });
    </script>
    <div id="lightning" />
</apex:page>