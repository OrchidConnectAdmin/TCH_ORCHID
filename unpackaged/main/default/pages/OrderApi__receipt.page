<apex:page tabStyle="OrderApi__Receipt__c"
        showHeader="false"
        standardStylesheets="false"
        applyHtmlTag="false"
        applyBodyTag="false"
        docType="html-5.0"
        controller="PagesApi.DefaultTemplateController"
        language="{!languageISOCode}"
        action="{!redirect}"
        extensions="OrderApi.NewReceiptInvoiceController">
    <apex:remoteObjects >
        <apex:remoteObjectModel name="OrderApi__Receipt__c" jsShorthand="Receipt" fields="Name,Id"/>
    </apex:remoteObjects>
    <html>
    <head>
        <script src="{!URLFOR($Resource.Framework__SLDS_BaseV2,'js/scripts.min.js')}" type="text/javascript"></script>
        <meta charset="utf-8"/>
        <title id="receipt-page-title">{!$ObjectType.Receipt__c.Fields.Name.Label}&nbsp;</title>
        
        <link rel="stylesheet" media="screen" href="{!URLFOR($Resource.emerald_1_0,'css/pages/checkout.min.css')}"/>
        <link rel="stylesheet" media="screen" href="{!URLFOR($Resource.emerald_1_0,'css/pages/print.min.css')}"/>
        <link rel="stylesheet" media="print" href="{!URLFOR($Resource.emerald_1_0,'css/pages/print.min.css')}"/>
        
        <script src="{!URLFOR($Resource.PagesApi__emerald_base_1_0, 'js/vendor.min.js')}" />
        <script src="{!URLFOR($Resource.PagesApi__emerald_base_1_0,'js/app.min.js')}" />

        <style>
            .print-button a {
                border: 1px solid #aeaeae;
                padding: 10px 25px;
                text-decoration: none;
                color: black;
            }
            .print-button a:hover {
                background-color: #aeaeae;
                text-decoration: none;
                color: white;
            }
            .print-button {
                text-align: center;
                margin: 45px;
            }
            @media print {
                print-button,
                .actionLink {
                    display: none;
                }
            }
            .receipt-address {
                padding-left: 15px;
                padding-top: 10px;
                padding-bottom: 10px
            }

            table.receipt-invoice-table thead tr th:last-of-type,
            table.receipt-invoice-table tbody tr td:last-of-type {
                width: 10px!important;
                text-align: right!important;
                padding-left: 10px!important;
                padding-right: 10px!important;
            }
        </style>
    </head>
    <body id="document" style="font-family: 'Helvetica+Neue', 'Arial', Sans-serif!important;">
        <apex:outputPanel id="errorPanel" rendered="{!hasError}">
            <section class="error-404">
                <div class="container m-t-30">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="well text-center">
                                <h1>{!$Label.OrderApi__PageNotFoundTitle}</h1>
                                <p class="lead">{!$Label.OrderApi__PageNotFoundDescription}</p>
                                    <Framework:messages />
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </apex:outputPanel>
        <apex:outputPanel rendered="{!NOT(hasError)}" layout="none">
            <apex:outputPanel layout="none" rendered="{!isAppUpdateActivated}">
                <c:new_receipt_invoice recInvId="{!attr_Id}"/>
            </apex:outputPanel>
            <apex:outputPanel layout="none" rendered="{!NOT(isAppUpdateActivated)}">
                <c:receipt receiptId="{!attr_Id}"/>
            </apex:outputPanel>
        </apex:outputPanel>
    </body>
    </html>
    <script type="text/javascript">
      var receipt = new SObjectModel.Receipt();
      var query = {
          where: {
              Id: { eq: "{!$CurrentPage.parameters.id}" }
          }
      };
      receipt.retrieve(query, function(error, results) {
          if (error) {
             document.getElementById('receipt-page-title').innerHTML += "{!$CurrentPage.parameters.id}"+" {!$Label.OrderApi__Receipt_Not_Found}";
          }
          else {
              if (results.length == 1) {
                document.getElementById('receipt-page-title').innerHTML += results[0].get("Name");
              }
              else {
                document.getElementById('receipt-page-title').innerHTML += "{!$CurrentPage.parameters.id}"+" {!$Label.OrderApi__Receipt_Not_Found}";
              }
          }
      });

      $(document).ready(function(){
        $("a[id^='lookup']").each(function(){
          var lookup = $(this);
          var anchor = $(this).text();
          var parent = $(this).parent();
          lookup.remove();
          parent.append(anchor);
        });
      });
  </script>
</apex:page>