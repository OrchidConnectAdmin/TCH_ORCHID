<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Renewed_Membership</fullName>
        <description>FON-RENEWAL-Renewed Membership</description>
        <protected>false</protected>
        <recipients>
            <field>Contact_Email__c</field>
            <type>email</type>
        </recipients>
        
        <senderType>CurrentUser</senderType>
        <template>Worflow_Emails/FON_SUBSCRIPTION_Renewed_Membership</template>
    </alerts>
    <fieldUpdates>
        <fullName>Update_Email</fullName>
        <field>Contact_Email__c</field>
        <formula>OrderApi__Subscription__r.OrderApi__Contact__r.Email</formula>
        <name>FON-RENEWAL-Renewed Membership</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>FON-RENEWAL-Renewed Membership</fullName>
        <actions>
            <name>Renewed_Membership</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Update_Email</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>OrderApi__Subscription__c.OrderApi__Renewals__c</field>
            <operation>greaterThan</operation>
            <value>0</value>
        </criteriaItems>
        <description>This workflow fires an email notification to the subscriptions contact upon renewal.</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
