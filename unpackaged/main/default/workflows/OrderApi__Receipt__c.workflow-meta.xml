<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Email_Alert_after_payment_is_posted</fullName>
        <description>FON-RECEIPT- email after posting</description>
        <protected>false</protected>
        <recipients>
            <field>OrderApi__Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        
        
        <senderAddress>ecchoinfo@theclearinghouse.org</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Worflow_Emails/FON_RECEIPT_email_after_posting</template>
    </alerts>
    <alerts>
        <fullName>Posted_Refund_Email_Alert</fullName>
        <description>FON-RECEIPT-Refund Notification to the Customer for New Refund</description>
        <protected>false</protected>
        <recipients>
            <field>OrderApi__Contact__c</field>
            <type>contactLookup</type>
        </recipients>
        
        <senderType>CurrentUser</senderType>
        <template>Worflow_Emails/FON_RECEIPT_Refund_Notification_to_the_Customer_for_New_Refund</template>
    </alerts>
    <rules>
        <fullName>FON-RECEIPT- email after posting</fullName>
        <actions>
            <name>Email_Alert_after_payment_is_posted</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>OrderApi__Receipt__c.OrderApi__Is_Posted__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>OrderApi__Receipt__c.OrderApi__Is_Refund__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <description>This workflow fires an email alert to the related contact when the receipt is posted.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>FON-RECEIPT-Refund Notification to the Customer for New Refund</fullName>
        <actions>
            <name>Posted_Refund_Email_Alert</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>OrderApi__Receipt__c.OrderApi__Is_Refund__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>OrderApi__Receipt__c.OrderApi__Is_Posted__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>Sends an email alert to the related contact when a refund has been created and posted.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
